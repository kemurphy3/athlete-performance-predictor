# Example environment configuration for athlete-performance-predictor
# Copy this to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost/athlete_performance

# Authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Strava API (OAuth)
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret
STRAVA_REDIRECT_URI=http://localhost:8000/auth/strava/callback

# Garmin Connect (if using public API)
GARMIN_USERNAME=your-garmin-username
GARMIN_PASSWORD=your-garmin-password

# Feature Flags
USE_DEMO_CALCULATOR=true  # Set to false in production with private repos
ENABLE_MULTI_ATHLETE=false  # Requires private repository

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Note: Production deployments should use private repository features
# See PUBLIC_PRIVATE_SEPARATION.md for details